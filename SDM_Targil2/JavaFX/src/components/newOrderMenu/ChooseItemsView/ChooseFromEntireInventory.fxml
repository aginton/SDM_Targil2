<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.newOrderMenu.ChooseItemsView.ChooseFromEntireInventoryController">
   <content>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints percentHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints fillHeight="false" minHeight="10.0" vgrow="NEVER" />
            <RowConstraints percentHeight="2.0" vgrow="NEVER" />
         </rowConstraints>
         <children>
            <TableView fx:id="inventoryTableView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" GridPane.rowIndex="1">
              <columns>
                <TableColumn fx:id="itemIdColumn" editable="false" prefWidth="86.0" text="Item ID" />
                <TableColumn fx:id="itemNameColumn" editable="false" prefWidth="73.0" text="Item Name" />
                  <TableColumn fx:id="itemAmountColumn" onEditCommit="#changeAmountCellEvent" prefWidth="93.0" text="Amount" />
                  <TableColumn fx:id="addColumn" editable="false" prefWidth="75.0" text="Add" />
                  <TableColumn fx:id="removeColumn" editable="false" prefWidth="75.0" text="Remove" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </TableView>
            <AnchorPane>
               <GridPane.margin>
                  <Insets bottom="3.0" />
               </GridPane.margin>
               <children>
                  <Label text="Edit Amount of items directly using +/- buttons, or input amount directly in cell" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </children>
      </GridPane>
   </content>
</ScrollPane>
